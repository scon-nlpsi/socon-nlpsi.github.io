<div class="sponsors-container">
  {% for sponsor in site.data.sponsors %}
    <a href="{{ sponsor.url }}" target="_blank" rel="noopener" class="sponsor-logo">
      <img src="{{ sponsor.logo }}" alt="{{ sponsor.name }} logo">
    </a>
  {% endfor %}
</div>

<style>
  .sponsors-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 15px;
    padding: 20px 0;
    border-top: 1px solid #e5e7eb;
    margin-top: 40px;
  }

  .sponsor-logo {
    flex-basis: calc(25% - 30px); /* adjust percentage for logos per line */
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sponsor-logo img {
    max-height: 80px; /* increase this to make logos larger */
    width: auto;
    object-fit: contain;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .sponsor-logo img:hover {
    opacity: 1;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .sponsor-logo {
      flex-basis: calc(50% - 20px);
    }
  }
</style>
